<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huadiao.mapper.HomepageMapper">

    <!--添加访问记录-->
    <insert id="insertVisitRecordByUid">
        insert into huadiao_homepage_visit(`uid`, `viewed_uid`, `status`, `visit_time`)
        values (#{uid}, #{viewedUid}, 1, now());
    </insert>

    <resultMap id="homepageInfoResultMap" type="com.huadiao.entity.HomepageInfo">
        <result property="userAvatar" column="user_avatar"/>
        <result property="pageBackground" column="page_background"/>
        <result property="visitCount" column="visit_count"/>
    </resultMap>
    <!--获取个人主页部分信息-->
    <select id="selectHomepageInfoByUid" resultMap="homepageInfoResultMap">
        select `user_avatar`, `homepage_background`, count(1) as `visit_count`
        from huadiao_homepage t1
                 left join huadiao_homepage_visit t2 on t1.uid = t2.uid
        where t1.uid = #{uid};
    </select>


</mapper>